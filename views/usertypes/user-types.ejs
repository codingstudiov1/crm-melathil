<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <%= title %>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/dashboard/home">Home</a></li>
                    <li class="breadcrumb-item active">
                        <%= title %>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="content">
        <div class="container">
            <a class="btn btn-primary mb-3" href="/dashboard/usertypes/create">Create new</a>
            <div class="row">
                <div class="col-md-8">
                    <div class="table-responsive">
                        <div class="card">
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Serial</th>
                                            <th>User type</th>
                                            <th colspan="2">Operaton</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% userTypes.forEach((element,index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index+1 %>
                                                </td>
                                                <td>
                                                    <%= element.usertype %>
                                                </td>
                                                <td><a class="text-primary"
                                                        onclick="return confirm('Are you sure to modify')"
                                                        href="/dashboard/usertypes/modify/<%= element._id %> ">Edit</a>
                                                </td>
                                                <td><a class="text-danger"
                                                        onclick="return confirm('Are you sure to delete')"
                                                        href="/dashboard/usertypes/delete/<%= element._id %> ">Delete</a>
                                                </td>

                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>