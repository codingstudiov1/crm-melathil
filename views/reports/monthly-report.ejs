<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>
          <%= title %>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= route %>/">Home</a></li>
          <li class="breadcrumb-item active">
            <%= title %>
          </li>
        </ol>
      </div>

    </div>
  </div>
</section>
<section>
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/<%= route %>/reports/sales-monthly" method="get">
            <div class="form-group">
                <label for="month">Select Month</label>
                <input type="month" name="month"  id="month" checked class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Find</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="modal-header">
            <h3><%= tableTitle %> </h3>
          </div>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead class="bg-dark">
                <tr>
                  <th>Date</th>
                  <th>Remarks</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% let sum = 0 %>
                <% partialClosings.forEach(element => { %>
                <% sum=sum+element.close_amount %>
                <tr>
                  <td><%= moment(element.close_date).format('DD-MM-YYYY') %></td>
                  <td><%= element.close_remarks %></td>
                  <td><%= element.close_amount %></td>
                </tr>
                <% }) %>
              </tbody>
              <tfoot>
                <tr>
                  <th colspan="2">Total</th>
                  <th class="bg-success"><%= sum %></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>