<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>
          <%= title %>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
          <li class="breadcrumb-item active">
            <%= title %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-5">
          <div class="card">
            <div class="card-body">
              <form action="<%= action %> " method="post">


                <div class="form-group">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" name="title" id="title" placeholder="Enquiry title" class="form-control">
                </div>
                <div class="form-group">
                  <label for="client" class="form-label">Client Details</label>
                  <select name="client" id="select2" class="form-control">
                    <option value="">Select</option>
                    <% clients.forEach(element => { %>
                    <option value="<%= element._id %>"><%= element.name %> /option>
                      <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="associated" class="form-label">Associated with</label>
                  <select name="associated" id="select2_mult" class="form-control" multiple="multiple">
                    <% clients.forEach(element => { %>
                      <option value="<%= element._id %>"><%= element.name %> </option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="date" class="form-label">Enquiry Date</label>
                  <input type="date" name="date" id="date" class="form-control">
                </div>
                <div class="form-group">
                  <label for="remarks" class="form-label">Remarks</label>
                  <textarea name="remarks" id="remarks" cols="" rows="4" class="form-control" placeholder="Remarks"></textarea>
                </div>
                <div class="form-group">
                  <label for="status" class="form-label">Status</label>
                  <select name="status" id="status" class="form-control">
                    <option value="">Select</option>
                    <% status.forEach(element => { %>
                    <option value="<%= element %>"><%= element %> </option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="temparature" class="form-label">Temparature</label>
                  <select name="temparature" id="temarature" class="form-control">
                    <option value="">Select</option>
                    <% temp.forEach(element => { %>
                    <option value="<%= element %>"><%= element %> </option>
                    <% }) %>
                  </select>
                </div>
                <button type="submit" value="" class="btn btn-primary">
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>