<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>
          <%= title %>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/<%= route %>/">Home</a></li>
          <li class="breadcrumb-item active">
            <%= title %>
          </li>
        </ol>
      </div>
    </div>
  </div>
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            
            <form id="<%= formId %>" action="<%= action %>" method="post">
              <div class="form-group mt-3">
                <label for="name">Name</label>
                <input type="text" name="client_name" id="name" class="form-control" value="<%= clientData.client_name %>">
              </div>
              <div class="form-group mt-3">
                <label for="address">Address</label>
                <textarea name="client_address" id="address" rows="3" class="form-control"><%= clientData.client_address %></textarea>
              </div>
              <div class="form-group mt-3">
                <label for="email">E-mail</label>
                <input type="email" name="client_email" id="email" class="form-control" value="<%= clientData.client_email %>">
              </div>
              <div class="form-group mt-3">
                <label for="phone">Phone</label>
                <input type="number" name="client_phone" id="phone" class="form-control" value="<%= clientData.client_phone %>">
              </div>
              <div class="form-group mt-3">
                <label for="designation">Designation</label>
                <input type="text" name="client_desi" id="designation" class="form-control" value="<%= clientData.client_desi %>">
              </div>
              <div class="form-group mt-3">
                <label for="type">Client type</label>
                <select required name="client_type" id="type" class="form-control">
                  <option value="">Select </option>
                  <% clientTypes.forEach(element => { %>
                  <% if (element._id==clientData?.client_type?._id) { %>
                  <option selected value="<%= element._id %>"><%= element.type_name %> </option>
                  <%} else { %>
                  <option value="<%= element._id %>"><%= element.type_name %> </option>
                  <% } %>
                  <% }) %>
                </select>
              </div>

              <button class="btn btn-primary" type="submit">Submit</button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>